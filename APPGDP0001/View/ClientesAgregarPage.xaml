<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:APPGDP0001.ViewModels"
             x:Class="APPGDP0001.View.ClientesAgregarPage"
             Title="Agregar Cliente">
             
    <ContentPage.BindingContext>
        <vm:ClientesViewModel />
    </ContentPage.BindingContext>   
    
    <StackLayout Padding="20">
        <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
    <Entry Placeholder="Dirección" Text="{Binding Direccion}" />
    <Entry Placeholder="Teléfono" Text="{Binding Telefono}" />
    <Entry Placeholder="Email" Text="{Binding Email}" />
    <Button Text="Agregar Cliente" Command="{Binding AgregarClienteCommand}" />
    </StackLayout>
</ContentPage>